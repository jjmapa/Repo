<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="LiveTVView1">
		<!--all content-->
		<control type="group">
			<left>25</left>
			<visible>Control.IsVisible(560)</visible>
			<include>VisibleFadeEffect</include>
			<!--content list-->
			<control type="list" id="560">
				<left>170</left>
				<top>200</top>
				<width>1004</width>
				<height>700</height>
				<onleft>2</onleft>
				<onright>60</onright>
				<onup>560</onup>
				<ondown>560</ondown>
				<viewtype label="$LOCALIZE[4]">list</viewtype>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>
				<visible>Container.Content(LiveTV)</visible>
				<itemlayout height="70" width="1004">
					<!--background-->
					<control type="image">
						<left>4</left>
						<top>0</top>
						<width>1000</width>
						<height>60</height>
						<texture >backgrounds/white5.png</texture>
					</control>
					<!--main label-->
					<control type="label">
						<left>19</left>
						<top>0</top>
						<width>990</width>
						<height>60</height>
						<font>label</font>
						<textcolor>white</textcolor>
						<selectedcolor>snow</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<!--secondary label-->
					<control type="label">
						<left>385</left>
						<top>0</top>
						<width>600</width>
						<height>60</height>
						<font>secondary.info</font>
						<textcolor>white</textcolor>
						<selectedcolor>snow</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>
				<focusedlayout height="70" width="1004">
					<!--background-->
					<control type="image">
						<left>4</left>
						<top>0</top>
						<width>1000</width>
						<height>60</height>
						<texture colordiffuse="tertiary">backgrounds/white5.png</texture>
						<animation effect="fade" start="100" end="75" time="200" condition="Control.HasFocus(60)">Conditional</animation>
					</control>
					<!--background strip-->
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>4</width>
						<height>60</height>
						<texture >backgrounds/white.png</texture>
						<animation effect="fade" start="100" end="75" time="200" condition="Control.HasFocus(60)">Conditional</animation>
					</control>
					<!--main label-->
					<control type="label">
						<left>19</left>
						<top>0</top>
						<width>990</width>
						<height>60</height>
						<font>label</font>
						<textcolor>text.primary</textcolor>
						<selectedcolor>snow</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<!--secondary label-->
					<control type="label">
						<left>385</left>
						<top>0</top>
						<width>600</width>
						<height>60</height>
						<font>secondary.info</font>
						<textcolor>text.primary</textcolor>
						<selectedcolor>snow</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</focusedlayout>
			</control>
			<!--scrollbar-->
			<control type="scrollbar" id="60">
				<left>1184</left>
				<top>200</top>
				<onleft>560</onleft>
				<onright>2</onright>
				<orientation>vertical</orientation>
				<showonepage>true</showonepage>
				<visible>Control.IsVisible(560)</visible>
			</control>
			<!--info-->
			<control type="group">
				<left>1201</left>
				<top>200</top>
				<visible>Control.IsVisible(560)</visible>
				<!--background-->
				<control type="image">
					<left>-20</left>
					<top>-20</top>
					<width>550</width>
					<height>730</height>
					<texture background="true" colordiffuse="tertiary">backgrounds/info bg.png</texture>
				</control>
				<!--fallback-->
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>510</width>
					<height>287</height>
					<aspectratio>scale</aspectratio>
					<texture background="true" >Fanart_Fallback_Small.png</texture>
					<visible>String.IsEmpty(ListItem.Art(fanart))</visible>
				</control>
				<!--icon-->
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>510</width>
					<height>287</height>
					<aspectratio aligny="bottom">keep</aspectratio>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<visible>String.IsEmpty(ListItem.Art(fanart))</visible>
				</control>
				<!--fanart-->
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>510</width>
					<height>287</height>
					<aspectratio>scale</aspectratio>
					<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
					<bordertexture background="true" colordiffuse="tertiary">backgrounds/white5.png</bordertexture>
					<bordersize>0</bordersize>
					<visible>!String.IsEmpty(ListItem.Art(fanart))</visible>
				</control>
				<!--info strip background-->
				<control type="image">
					<left>0</left>
					<top>280</top>
					<width>510</width>
					<height>60</height>
					<texture background="true" colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
				</control>
				<!--fanart shadow-->
				<control type="image">
					<left>0</left>
					<top>280</top>
					<width>510</width>
					<height>10</height>
					<texture>homeshadow.png</texture>
					<animation effect="fade" start="100" end="100" time="0" condition="true">Conditional</animation>
				</control>
				<!--secondary label-->
				<control type="label">
					<left>15</left>
					<top>280</top>
					<width>480</width>
					<height>55</height>
					<font>secondary.info.big</font>
					<textcolor>white</textcolor>
					<selectedcolor>white</selectedcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label2]</label>
				</control>
				<!--plot (tv shows)-->
				<control type="textbox">
					<left>15</left>
					<top>342</top>
					<width>480</width>
					<height>338</height>
					<font>label</font>
					<align>left</align>
					<textcolor>text.primary</textcolor>
					<label>$INFO[ListItem.Plot]</label>
					<autoscroll time="2000" delay="5000" repeat="8000">Skin.HasSetting(AutoScroll)</autoscroll>
				</control>
				<!--info strip shadow-->
				<control type="image">
					<left>0</left>
					<top>340</top>
					<width>510</width>
					<height>10</height>
					<texture>homeshadow.png</texture>
					<animation effect="fade" start="100" end="100" time="0" condition="true">Conditional</animation>
				</control>
			</control>
		</control>
	</include>
</includes>