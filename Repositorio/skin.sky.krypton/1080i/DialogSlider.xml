<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>11</defaultcontrol>
	<controls>
		<!--all content-->
		<control type="group">
			<visible>!Window.IsActive(FileBrowser) + !Window.IsActive(ShutdownMenu)</visible>
			<animation effect="slide" start="0,-120" end="0,0" time="100" tween="quadratic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,-120" time="100" tween="quadratic" easing="out">WindowClose</animation>
			<animation effect="slide" start="0,-120" end="0,0" time="100" tween="quadratic" easing="out">Visible</animation>
			<animation effect="slide" start="0,0" end="0,-120" time="100" tween="quadratic" easing="out">Hidden</animation>
			<!--title bars and backgrounds-->
			<control type="group">
				<!--background-->
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>1920</width>
					<height>160</height>
					<texture colordiffuse="tertiary">backgrounds/white5.png</texture>
				</control>
				<!--title background-->
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>1920</width>
					<height>80</height>
					<texture background="true" >new_pvr/listselect_fo2.png</texture>
				</control>
				<!--title shadow-->
				<control type="image">
					<left>0</left>
					<top>80</top>
					<width>1920</width>
					<height>20</height>
					<texture>homeshadow.png</texture>
					<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
				</control>
				<!--top shadow-->
				<control type="image">
					<left>0</left>
					<top>160</top>
					<width>1920</width>
					<height>30</height>
					<texture>homeshadow.png</texture>
				</control>
			</control>
			<control type="label" id="10">
				<description>Dialog header</description>
				<left>638</left>
				<top>15</top>
				<width>345</width>
				<height>65</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>menu.title</font>
				<textcolor>white</textcolor>
			</control>
			<control type="label" id="12">
				<description>Slider Value</description>
				<left>938</left>
				<top>15</top>
				<width>330</width>
				<height>65</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>button.bold</font>
				<textcolor>white</textcolor>
			</control>
			<control type="slider" id="11">
				<description>Slider</description>
				<left>638</left>
				<top>110</top>
				<width>630</width>
				<height>30</height>
				<aligny>center</aligny>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
				<texturesliderbar colordiffuse="text.primary">osd_slider_bg_3.png</texturesliderbar>
				<textureslidernib >osd_slider_nibNF.png</textureslidernib>
				<textureslidernibfocus >osd_slider_nib.png</textureslidernibfocus>
				<onup>11</onup>
				<ondown>11</ondown>
				<onleft>11</onleft>
				<onright>11</onright>
			</control>
		</control>
	</controls>
</window>