<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>-</defaultcontrol>
	<controls>
		<control type="visualisation" id="2">
			<description>visualisation</description>
			<left>0</left>
			<top>0</top>
			<width>1920</width>
			<height>1080</height>
		</control>
		<control type="image">
			<description>Fanart Image for Artist</description>
			<left>0</left>
			<top>0</top>
			<width>1920</width>
			<height>1080</height>
			<texture background="true">$INFO[Player.Art(fanart)]</texture>
			<colordiffuse>AAFFFFFF</colordiffuse>
			<visible>!String.IsEmpty(Player.Art(fanart)) + !Skin.HasSetting(HideVisualizationFanart)</visible>
			<fadetime>600</fadetime>
		</control>
		<!-- media infos -->
		<control type="group">
			<animation effect="fade" time="200">VisibleChange</animation>
			<visible>[Player.ShowInfo | Window.IsActive(MusicOSD)] + ![Window.IsVisible(AddonSettings) | Window.IsVisible(SelectDialog) | Window.IsVisible(VisualisationPresetList) | Window.IsVisible(PVROSDChannels) | Window.IsVisible(PVROSDGuide) | Window.IsVisible(PVRRadioRDSInfo) | Window.IsVisible(OSDAudioDSPSettings) | Window.IsVisible(Addon)]</visible>
			<!--header background-->
			<control type="image">
				<left>64</left>
				<top>60</top>
				<width>200</width>
				<height>45</height>
				<texture colordiffuse="tertiary">backgrounds/white5.png</texture>
			</control>
			<!--header background strip-->
			<control type="image">
				<left>60</left>
				<top>60</top>
				<width>4</width>
				<height>45</height>
				<texture >backgrounds/white.png</texture>
			</control>
			<control type="label">
				<description>Partymode Header label</description>
				<left>70</left>
				<top>60</top>
				<width>186</width>
				<height>45</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>breadcrumb</font>
				<textcolor>text.primary</textcolor>
				<label>$LOCALIZE[589]</label>
				<visible>MusicPartyMode.Enabled</visible>
			</control>
			<control type="label">
				<description>Normal Header label</description>
				<left>70</left>
				<top>60</top>
				<width>186</width>
				<height>45</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>breadcrumb</font>
				<textcolor>text.primary</textcolor>
				<label>$INFO[musicplayer.Playlistposition,$LOCALIZE[554]: ]$INFO[musicplayer.Playlistlength, / ]</label>
				<visible>!MusicPartyMode.Enabled</visible>
			</control>
			<!--time-->
			<control type="group">
				<animation effect="slide" start="0,0" end="-50,0" time="100" condition="Player.Muted">conditional</animation>
				<!--time background (12 hour)-->
				<control type="image">
					<left>214r</left>
					<top>60</top>
					<width>150</width>
					<height>45</height>
					<texture colordiffuse="tertiary">backgrounds/white.png</texture>
					<visible>String.Contains(System.Time,am) | String.Contains(System.Time,pm)</visible>
				</control>
				<!--time background (24 hour)-->
				<control type="image">
					<left>174r</left>
					<top>60</top>
					<width>110</width>
					<height>45</height>
					<texture colordiffuse="tertiary">backgrounds/white.png</texture>
					<visible>!String.Contains(System.Time,am) + !String.Contains(System.Time,pm)</visible>
				</control>
				<!--time background strip-->
				<control type="image">
					<left>64r</left>
					<top>60</top>
					<width>4</width>
					<height>45</height>
					<texture >backgrounds/white.png</texture>
				</control>
				<!--time-->
				<control type="label">
					<right>71</right>
					<top>60</top>
					<width>300</width>
					<height>45</height>
					<align>right</align>
					<aligny>center</aligny>
					<font>breadcrumb</font>
					<textcolor>text.primary</textcolor>
					<label>$INFO[System.Time(hh:mm)]$INFO[System.Time(xx), ,]</label>
				</control>
			</control>
			<control type="image">
				<description>cover image</description>
				<left>140</left>
				<top>285r</top>
				<width>263</width>
				<height>263</height>
				<texture fallback="DefaultAlbumCover.png">$INFO[Player.Art(thumb)]</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
				<bordertexture border="8">ThumbShadow.png</bordertexture>
				<bordersize>8</bordersize>
			</control>
			<!--background-->
			<control type="image">
				<left>390</left>
				<top>797</top>
				<width>1140</width>
				<height>190</height>
				<texture colordiffuse="tertiary">backgrounds/np info bg.png</texture>
			</control>
			<!--title bg-->
			<control type="image">
				<left>400</left>
				<top>277r</top>
				<width>1120</width>
				<height>70</height>
				<texture >new_pvr/listselect_fo2.png</texture>
			</control>
			<!--title shadow-->
			<control type="image">
				<left>400</left>
				<top>207r</top>
				<width>1120</width>
				<height>10</height>
				<texture>homeshadow.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
			<control type="group">
				<left>400</left>
				<top>282r</top>
				<control type="label" id="1">
					<description>header label</description>
					<left>15</left>
					<top>8</top>
					<width>1090</width>
					<height>60</height>
					<font>menu.title</font>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[Player.Title]$INFO[MusicPlayer.Artist, - ]</label>
					<textcolor>white</textcolor>
				</control>
				<control type="grouplist">
					<left>15</left>
					<top>75</top>
					<width>1365</width>
					<height>52</height>
					<itemgap>8</itemgap>
					<orientation>horizontal</orientation>
					<control type="label">
						<width>800</width>
						<height>45</height>
						<font>font12</font>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[MusicPlayer.Album]</label>
						<scroll>true</scroll>
					</control>
					<control type="group">
						<width>120</width>
						<height>52</height>
						<control type="image">
							<description>Audio Codec Image</description>
							<top>11</top>
							<width>120</width>
							<height>30</height>
							<aspectratio align="right">keep</aspectratio>
							<texture colordiffuse="white">$INFO[MusicPlayer.Codec,flags/audio/,.png]</texture>
						</control>
					</control>
					<control type="image">
						<description>Rating</description>
						<width>150</width>
						<height>52</height>
						<aspectratio align="center">keep</aspectratio>
						<texture fallback="ratings/0.png" colordiffuse="white">$INFO[MusicPlayer.UserRating,ratings/,.png]</texture>
					</control>
				</control>
				<control type="label">
					<left>165</left>
					<top>130</top>
					<width>790</width>
					<height>60</height>
					<label>$LOCALIZE[19031]: $INFO[MusicPlayer.offset(1).Artist,, - ]$INFO[MusicPlayer.offset(1).Title]</label>
					<align>center</align>
					<aligny>center</aligny>
					<font>secondary.info.small</font>
					<scroll>true</scroll>
				</control>
			</control>
			<!--progress-->
			<control type="group">
				<top>155r</top>
				<!--progress-->
				<control type="progress">
					<left>415</left>
					<top>0</top>
					<width>1090</width>
					<height>7</height>
					<info>Player.Progress</info>
				</control>
				<!--current time-->
				<control type="label">
					<left>415</left>
					<top>-8</top>
					<width>150</width>
					<height>60</height>
					<font>breadcrumb.secondary</font>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[Player.Time(hh:mm:ss)]</label>
				</control>
				<!--end time-->
				<control type="label">
					<left>1355</left>
					<top>-8</top>
					<width>150</width>
					<height>60</height>
					<font>breadcrumb.secondary</font>
					<align>right</align>
					<aligny>center</aligny>
					<label>$INFO[Player.Duration(hh:mm:ss)]</label>
				</control>
			</control>
		</control>
	</controls>
</window>