<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>1</defaultcontrol>
	<controls>
		<!--all content-->
		<control type="group">
			<left>529r</left>
			<top>60</top>
			<animation effect="slide" start="0,0" end="-100,0" time="0" condition="system.getbool(input.enablemouse)">Conditional</animation>
			<animation effect="slide" start="0,0" end="-50,0" time="100" condition="Player.Muted">conditional</animation>
			<animation effect="slide" start="0,0" end="-40,0" time="0" condition="String.Contains(System.Time,am) | String.Contains(System.Time,pm)">Conditional</animation>
			<!--glow-->
			<control type="image">
				<left>-10</left>
				<top>-10</top>
				<width>370</width>
				<height>65</height>
				<texture colordiffuse="tertiary">backgrounds/volume.png</texture>
			</control>
			<!--background-->
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>350</width>
				<height>45</height>
				<texture colordiffuse="tertiary">backgrounds/white5.png</texture>
			</control>
			<!--normal audio-->
			<control type="group">
				<visible>!player.passthrough</visible>
				<!--volume icon-->
				<control type="image">
					<left>304</left>
					<top>0</top>
					<width>45</width>
					<height>45</height>
					<aspectratio>keep</aspectratio>
					<texture colordiffuse="text.primary">VolumeIcon.png</texture>
				</control>
				<!--volume bar-->
				<control type="progress" id="1">
					<left>10</left>
					<top>19</top>
					<width>290</width>
					<height>7</height>
					<info>Player.Volume</info>
				</control>
			</control>
			<!--passthrough audio-->
			<control type="group">
				<visible>player.passthrough</visible>
				<!--volume icon-->
				<control type="image">
					<left>304</left>
					<top>0</top>
					<width>45</width>
					<height>45</height>
					<aspectratio>keep</aspectratio>
					<texture colordiffuse="text.primary">VolumeIcon.png</texture>
				</control>
				<control type="label">
					<description>Passthrough Label</description>
					<left>-45</left>
					<top>-1</top>
					<width>345</width>
					<height>45</height>
					<label>$LOCALIZE[29802]</label>
					<font>kai.secondary</font>
					<textcolor>text.primary</textcolor>
					<align>right</align>
					<aligny>center</aligny>
				</control>
			</control>
		</control>
		<control type="group">
			<left>105r</left>
			<top>60</top>
			<visible>Player.Muted</visible>
			<!--glow-->
			<control type="image" id="122">
				<left>-10</left>
				<top>-10</top>
				<width>65</width>
				<height>65</height>
				<texture colordiffuse="tertiary">backgrounds/mute.png</texture>
			</control>
			<!--background-->
			<control type="image" id="122">
				<left>0</left>
				<top>0</top>
				<width>45</width>
				<height>45</height>
				<texture colordiffuse="tertiary">backgrounds/white.png</texture>
			</control>
			<!--mute icon-->
			<control type="image">
				<description>Back Icon</description>
				<left>0</left>
				<top>0</top>
				<width>45</width>
				<height>45</height>
				<aspectratio>keep</aspectratio>
				<texture colordiffuse="text.primary">icon-mute.png</texture>
			</control>
		</control>
	</controls>
</window>